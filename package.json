{
  "name": "lancaster-stemmer",
  "version": "1.0.5",
  "description": "Lancaster stemming algorithm",
  "license": "MIT",
  "keywords": [
    "paice",
    "husk",
    "lancaster",
    "stemmer",
    "cli",
    "bin"
  ],
  "homepage": "https://words.github.io/lancaster-stemmer/",
  "repository": "words/lancaster-stemmer",
  "funding": {
    "type": "github",
    "url": "https://github.com/sponsors/wooorm"
  },
  "bugs": "https://github.com/words/lancaster-stemmer/issues",
  "author": "Titus Wormer <tituswormer@gmail.com> (https://wooorm.com)",
  "contributors": [
    "Titus Wormer <tituswormer@gmail.com> (https://wooorm.com)"
  ],
  "files": [
    "index.js",
    "cli.js"
  ],
  "bin": "cli.js",
  "main": "index.js",
  "dependencies": {},
  "devDependencies": {
    "browserify": "^16.0.0",
    "nyc": "^15.0.0",
    "prettier": "^1.0.0",
    "remark-cli": "^7.0.0",
    "remark-preset-wooorm": "^6.0.0",
    "tape": "^4.0.0",
    "tinyify": "^2.0.0",
    "xo": "^0.25.0"
  },
  "scripts": {
    "format": "remark . -qfo && prettier --write \"**/*.js\" && xo --fix",
    "build-bundle": "browserify . -s lancasterStemmer -o lancaster-stemmer.js",
    "build-mangle": "browserify . -s lancasterStemmer -p tinyify -o lancaster-stemmer.min.js",
    "build": "npm run build-bundle && npm run build-mangle",
    "test-api": "node test",
    "test-coverage": "nyc --reporter lcov tape test.js",
    "test": "npm run format && npm run build && npm run test-coverage"
  },
  "nyc": {
    "check-coverage": true,
    "lines": 100,
    "functions": 100,
    "branches": 100
  },
  "prettier": {
    "tabWidth": 2,
    "useTabs": false,
    "singleQuote": true,
    "bracketSpacing": false,
    "semi": false,
    "trailingComma": "none"
  },
  "xo": {
    "prettier": true,
    "esnext": false,
    "rules": {
      "unicorn/prefer-includes": "off",
      "unicorn/prefer-starts-ends-with": "off",
      "capitalized-comments": "off"
    },
    "ignores": [
      "lancaster-stemmer.js"
    ]
  },
  "remarkConfig": {
    "plugins": [
      "preset-wooorm"
    ]
  }
}
